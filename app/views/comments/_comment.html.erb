<div class="card" style="margin-bottom: 10px;">
  <div class="card-body">
    <h6 class="card-title">
      <%= User.find(comment.user_id).name %>
      <small class="text-muted">
        <%= comment.created_at.strftime("%d/%m/%Y %H:%M") %>
      </small>
    </h6>
    <p class="card-text"><%= comment.body %></p>
  </div>
</div>
